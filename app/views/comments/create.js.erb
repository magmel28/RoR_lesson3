<% if @comment.root? %>
  $(".comments_box").append("<%= escape_javascript render(:partial => 'comments/comment', :locals => { :comment => @comment }) %>");
<% else %>
$("#<%= @comment.parent.id %> .comment-children ").append("<%= escape_javascript render(:partial => 'comments/comment', :locals => { :comment => @comment }) %>");
<% end %>